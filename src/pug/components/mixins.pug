mixin menu (items)
    for item in items
        li
            a(href=item.url) #{item.name}

mixin figure (items)
    for item in items
        figure
            figcaption
                .picture
                    picture
                        source(srcset=item.src +".webp", type="image/webp")
                        img(src=item.src +".png", alt="")
                p
                    span #{item.span}
                p.price
                    b $
                    | #{item.price}
                    i /month
                .product_description
                    p Lorem ipsum dolor sit amet.
                    p sed do eiusmod tempor incididunt ut.
                    p Labore et dolore magna aliqua.
                    p quis nostrud exercitation ullamco laboris.
                    p Ea commodo consequat.
